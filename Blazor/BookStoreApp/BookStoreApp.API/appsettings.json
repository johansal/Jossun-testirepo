{
  "ConnectionStrings": {
    "BookStoreAppDbConnection" : "Server=localhost;Database=BookStoreDB;Trusted_Connection=True;MultipleActiveResultSets=True"
  },
  "SeriLog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lofetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "JwtSettings": {
    "Issuer": "BookStoreAPI",
    "Audience": "BooksStoreApiClients",
    "Duration": 1
  },
  "AllowedHosts": "*"
}
